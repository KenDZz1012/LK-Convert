<!-- beautify ignore:start -->
<html
  lang="en"
  class="light-style layout-menu-fixed"
  dir="ltr"
  data-theme="theme-default"
  data-assets-path="../assets/"
  data-template="vertical-menu-template-free"
>
  <head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <%-include("../components/head.ejs") %>
    <style>
      .modal {
        display: none; /* Hidden by default */
        position: fixed; /* Stay in place */
        z-index: 1; /* Sit on top */
        padding-top: 100px; /* Location of the box */
        left: 0;
        top: 0;
        width: 100%; /* Full width */
        height: 100%; /* Full height */
        overflow: auto; /* Enable scroll if needed */
        /* background-color: rgb(0,0,0);
        background-color: rgba(225, 194, 194, 0.4); */
      }

      /* Modal Content */
      .modal-content {
        background-color: #fefefe;
        margin: auto;
        padding: 20px;
        border: 1px solid #888;
        width: 26%;
        margin-left: 600px;
        margin-top: 185px;
        
      }
      select {
          background:transparent !important;
          margin-bottom: 1em;
          padding: .25em;
          border: 0;
          border-bottom: 2px solid currentcolor; 
          font-weight: bold;
          letter-spacing: .15em;
          border-radius: 0;
        }
    </style>
  </head>

  <body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">
        <!-- Menu -->

        <%-include("../components/navbar.ejs") %>

        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
          <!-- Navbar -->

          <%-include("../components/header.ejs") %>


          <!-- / Navbar -->

          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
              <h4 class="fw-bold py-3 mb-4">Files</h4>
              <div class="card">
                <div class="table-responsive text-nowrap">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>Ảnh</th>
                        <th>File Convert</th>
                        <th>Size</th>
                        <th>Date</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody class="">
                        <%for(let item of files){%>
                          <form method="post" class="formDelete" style="margin-left:20px">
                          <input class="id" type="hidden" value = "<%=item._id%>">
                            <tr class="accItem">
                                <td style="display:flex">
                                    <%if(item.type == 'picture'){%>
                                    <%if(item.img.length == 1){%>
                                      <img src="/static/site/imageToText/<%=item.numfile%>/<%=item.img[0]%>" alt="" style="width:60px;height:60px;object-fit: cover;">
                                        <p style="margin-left:36px;font-weight:bold; letter-spacing: .15em;margin-top:18px"><%=item.img[0]%></p>
                                    <%}else{%>
                                      <input type="hidden" class="numfile" value="<%=item.numfile%>">
                                      <img class="imageName" src="/static/site/imageToText/<%=item.numfile%>/<%=item.img[0]%>" alt="" style="width:60px;height:60px;object-fit: cover;">
                                      <select class="imgName" onchange=changeOption()>
                                        <%for(let img of item.img){%>
                                          <option class="imgOption" value="<%=img%>"><%=img%></option>
                                        <%}%>
                                      </select>

                                    <%}%>
                                      
                                    <%}else{%>
                                      <img src="/static/site/assest/pdf-icon.png" alt="" style="width:60px;height:60px;object-fit: cover;">
                                      <p style="margin-left:36px;font-weight:bold; letter-spacing: .15em;margin-top:18px"><%=item.img[0]%></p>
                                    
                                  <%}%>
                                </td>
                                <td><%=item.name%></td>
                                <td><%=item.size%></td>
                                <td><%=item.day%></td>
                                <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                      <img src="/static/admin/assets/images/dot.png" class="bx bx-trash me-1" style="width: 24px;height: 24px;margin-left:20px;">
                                    </button>
                                    <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/admin/file/edit-<%=item._id%>" style="display: flex;" 
                                        >
                                        <img src="/static/admin/assets/images/setting.png" style="width: 24px;height: 24px" alt="">
                                        <p style="margin-left:20px;color:black">Edit</p>
                                        </a
                                    >
                                    <img src="/static/admin/assets/images/trash.png" style="width: 24px;height: 24px;margin-left: 20px;" alt="">
                                    <button type="button" class="btnModal" style="margin-left: 12px;border:none;background:#fff">Delete</button> 
                                        
                                    </div>
                                </div>
                                </td>
                            </tr>
                            <div id="myModal" class="modal">
                              <!-- Modal content -->
                              <div class="modal-content">
                                <span class="close">&times;</span>
                                <p style="overflow: hidden">Bạn muốn xóa tài khoản <%=item.name%></p>
                                <button type="submit" style="width:60px;margin-left: 280px;border:none;background:red;color:white">Delete</button> 
                              </div>
                            </div>
                          </form>

                        <%}%>




                    </tbody>
                  </table>
                  
              <!--/ Hoverable Table rows -->


            </div>
            <!-- / Content -->
            <div class="panel-footer">
              <nav aria-label="Page navigation example">
                  <ul class="pagination">
                          <%if(page > 1){%>
                              <li class="page-item"><a class="page-link" href="/admin/file/index/?page=<%=page-1%>">&laquo;</a></li>
                          <%}%>
                          <%for(x in pages){%>
                          <%if(pages[x] ==="..."){%>
                              <li class="page-item"><a class="page-link" onclick="return false;" href=""><%=pages[x]%></a></li>
                          <%} else {%>
                              <li class="page-item <%= pages[x] == page? 'active' : '' %>"><a class="page-link" href="/admin/file/index/?page=<%=pages[x]%>"><%=pages[x]%></a></li>
                          <%}%>
                          
                          
                      <%}%>
                      <%if(page < totalPage){%>
                          <li class="page-item"><a class="page-link" href="/admin/file/index/?page=<%=page+1%>">&raquo;</a></li>
                      <%}%>
                  </ul>
              </nav>
          </div>
          </div>
        </div>
            <div class="content-backdrop fade"></div>
          </div>
          <!-- Content wrapper -->
        </div>
        <!-- / Layout page -->
      </div>

      <!-- Overlay -->
      <div class="layout-overlay layout-menu-toggle"></div>
    </div>
    <!-- / Layout wrapper -->

   

    <!-- Core JS -->
    <!-- build:js assets/vendor/js/core.js -->
    <%-include("../components/footer.ejs") %>

  </body>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <script>
     let modal = document.getElementsByClassName("modal");
     let listForm = document.getElementsByClassName("formDelete");
     let btn = document.getElementsByClassName("btnModal");
     var span = document.getElementsByClassName("close");

      for (let i= 0; i < listForm.length; ++i) {
        
        btn[i].onclick = function() {
          console.log("a")
          modal[i].style.display = "block";
        }
        span[i].onclick = function() {
          modal[i].style.display = "none";
        }
        listForm[i].onsubmit = async function(event){
          event.preventDefault();
          let id = document.getElementsByClassName("id")[i].value
          const data = await axios.post(`/admin/file/deleteFile-${id}`)
          console.log(data);
          document.getElementsByClassName("accItem")[i].remove()
          modal[i].style.display = "none";


        }
      }
      list = document.getElementsByClassName("imgName")
        for (let i= 0; i < list.length; ++i) {
        list[i].onchange = function () {
          let val = list[i].value;
          let numfile = document.getElementsByClassName("numfile")[i].value;
          document.getElementsByClassName("imageName")[i].setAttribute("src", `/static/site/imageToText/${numfile}/${val}`)
        }
      }
  </script>
</html>
